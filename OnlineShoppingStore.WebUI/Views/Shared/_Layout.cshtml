<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Shopping Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <style>
        .navbar-right{
            float: right !important;
            margin-right: 15px; margin-left: 15px;
        }
    </style>
</head>
<body class="container-fluid">
    <div class="navbar navbar-inverse " role="navigation">
        @*<a class="navbar-brand" href="#">Online Shopping Store</a>*@
        <a class="navbar-brand" href="#">
            <span class="hidden-xs">ONLINE SHOPPING</span>
            <div class="visible-xs">ONLINE</div>
            <div class="visible-xs">SHOPPING</div>
        </a>
        @Html.Action("Summary", "Cart")
    </div>

    <div class="visible-xs">
        @Html.Action("Menu", "Nav", new { horizontalLayout = true })
    </div>

    <div class="row panel">
        @*<div id="categories" class="col-lg-3">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-lg-7">
            @RenderBody()
        </div>*@
        <div class="col-sm-3 hidden-xs">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-12 col-sm-8">
            @RenderBody()
        </div>
    </div>
    
</body>
</html>
